{% extends 'base.html.twig' %}

{% block body %}

    {#{{ form(form) }}#}

    {{ form_start(form) }}

    {{ form_errors(form.priority) }}
    <div class="row">
        <div class="col-6">
            {{ form_label(form.priority, 'Please set the priority') }}
            {{ form_row(form.priority, { "label": false }) }}
        </div>
        <div class="col-6">
            {{ form_row(form.name) }}
        </div>
        <div class="col-6">
            {{ form_row(form.status) }}
        </div>
        <div class="col-6">
            {{ form_row(form.dateCreation) }}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}